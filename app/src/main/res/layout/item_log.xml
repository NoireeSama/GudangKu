<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_icon_bg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E8F5E9"> <ImageView
            android:id="@+id/img_icon_log"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/ic_add"
            app:tint="#2E7D32"/> </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_judul_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stok Masuk"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_desc_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beras Bulog +10 karung\nGudang: Gudang Utama â€¢ Oleh: Mirza"
                android:textColor="@color/text_grey"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="4dp"
                android:maxLines="4"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_waktu_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30"
            android:textColor="@color/text_grey"
            android:textSize="12sp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>